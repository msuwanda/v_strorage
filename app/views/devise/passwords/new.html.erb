<h1 class="heading-page">Forgot your password?</h1>

<hr class="page-hr">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    
    <%= f.label :email,:class => "col-md-2 control-label" %>
    
    <div class="col-md-5">
    
    	<%= f.email_field :email, autofocus: true, :class => "form-control" %>
  	
  	</div>

  </div>

  <div class="form-group">

  	<div class="col-sm-offset-2 col-sm-7">

    	<%= f.submit "Send me reset password instructions", :class => "btn btn-success" %><br>
    	<%= render "devise/shared/links" %>
	</div>
  
  </div>
<% end %>


