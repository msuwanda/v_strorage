<h1 class="heading-page">Profile Saya</h1>

<hr class="page-hr">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,:multipart => true,:class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
  
    <%= f.label :name, :class => "col-md-2 control-label" %>
    
    <div class="col-md-5">
    
      <%= f.text_field :name, :autofocus => true , :class => "form-control" %>
    
    </div>
  
  </div>

  <div class="form-group">
    <%= f.label :email, :class => "col-md-2 control-label" %>
    
    <div class="col-md-5">
      <%= f.email_field :email, autofocus: true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    
    <%= f.label :avatar, :class => "col-md-2 control-label" %>


    <div class="col-md-5">
      
      <%= image_tag current_user.avatar.url(:large), :class => "img-profil" if current_user.avatar %>
      
        <br />    
      
        <br>
    
      <%= f.file_field :avatar, :class => "form-control" %>
    
      <span class="help-block">
    
        (kosongkan jika Anda tidak ingin mengubahnya.)
    
      </span>
    
    </div>
      
      
  </div>
  

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
 
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
 
  <% end %>

  <div class="form-group">
 
    <%= f.label :password, :class => "col-md-2 control-label"  %> 
    
    <div class="col-md-5">

    <%= f.password_field :password, autocomplete: "off" ,:class => "form-control" %>
      
      <span class="help-block">
    
        (kosongkan jika Anda tidak ingin mengubahnya.)
    
      </span>

    </div>

  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => "col-md-2 control-label" %>

    <div class="col-md-5">

      <%= f.password_field :password_confirmation, autocomplete: "off" , :class => "form-control" %>

    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_password, :class => "col-md-2 control-label" %>
    <div class="col-md-5">
    <%= f.password_field :current_password, autocomplete: "off" , :class => "form-control" %>
      <span class="help-block">
        ( kita membutuhkan password Anda saat ini untuk mengkonfirmasi perubahan Anda.)
      </span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-7">
      <%= f.submit "Update" , :class => "btn btn-success" %>
      <%= link_to "Back", :back , :class => "btn btn-danger" %>
    </div>
  </div>
<% end %>


