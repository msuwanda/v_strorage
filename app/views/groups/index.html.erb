<h1 class="heading-page">Listing groups</h1>

<hr class="page-hr">

<div class="panel panel-default">

  <div class="panel-heading">

    <h3 class="panel-title">Formal Group</h3>

  </div>

  <div class="panel-body">
    
    <table class="table table-striped table-hover">
    
      <thead>
        
        <tr>
          
          <th>Name</th>
          
          <th colspan="3"></th>
      
        </tr>
      
      </thead>

      <tbody>
        
        <% @formal.each do |group| %>
          
          <tr>
          
            <td><%= group.name %></td>
          
            <td><%= link_to '<i class="fa fa-check-circle-o"></i> Show'.html_safe, group ,:class => "btn btn-primary" %></td>
          
          
          
          </tr>
        
        <% end %>
    
      </tbody>

    </table>

  </div>

</div>

<div class="panel panel-default">

  <div class="panel-heading">

    <h3 class="panel-title">Non Formal Group</h3>

  </div>

  <div class="panel-body">
    
    <table class="table table-striped table-hover">
    
      <thead>
        
        <tr>
          
          <th>Name</th>
          
          <th colspan="3"></th>
      
        </tr>
      
      </thead>

      <tbody>
        
        <% @nonformal.each do |group| %>
          
          <tr>
          
            <td><%= group.name %></td>
          
            <td><%= link_to '<i class="fa fa-check-circle-o"></i> Show'.html_safe, group ,:class => "btn btn-primary" %></td>
          
          
          </tr>
        
        <% end %>
    
      </tbody>

    </table>

  </div>

</div>


