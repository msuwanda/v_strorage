<h1>Listing post_projects</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_projects.each do |post_project| %>
      <tr>
        <td><%= post_project.project_id %></td>
        <td><%= post_project.user_id %></td>
        <td><%= post_project.content %></td>
        <td><%= link_to 'Show', post_project %></td>
        <td><%= link_to 'Edit', edit_post_project_path(post_project) %></td>
        <td><%= link_to 'Destroy', post_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post project', new_post_project_path %>
