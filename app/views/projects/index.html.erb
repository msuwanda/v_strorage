<h1 class="heading-page">Listing projects</h1>

<hr class="page-hr">
<table class="table table-stirped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Hashtag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.project_category.hashtag  %></td>
        <td><%= link_to '<i class="fa fa-check-circle-o"></i> Show'.html_safe, project , :class => "btn btn-primary"%>
        <%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_project_path(project),:class => "btn btn-primary" %>
        <%= link_to '<i class="fa fa-trash-o"></i> Hapus'.html_safe, project, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="fa fa-plus"></i> New Project'.html_safe, new_project_path , :class => "btn btn-success"%>
