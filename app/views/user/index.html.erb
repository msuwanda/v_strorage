<% if can? :read , User %>

<h1 class="heading-page">Listing users</h1>

<hr class="page-hr">
<table class="table table-stirped table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Nama</th>
      <th>Mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name,user_path(user.id) %></td>
        <td><%= user.email %></td>
        <td><%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_user_path(user),:class => "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '<i class="fa fa-plus"></i> New User'.html_safe, new_user_path , :class => "btn btn-success"%>

<% else %>
  <%= render 'layouts/eror404' %>
<% end %>
