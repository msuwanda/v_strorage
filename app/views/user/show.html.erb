<br>
<div class="col-lg-12">
	<div class="well-profil">
		<div class="row">
			<div class="col-md-2">
			<%= image_tag @users.avatar.url(:large) ,:class => "img-profil" %>

			</div>
			<div class="col-md-9">
				<div class="col-md-12">
					<font class="name-profil"><b><%= @users.name %></b></font>
				</div>
				<div class="col-md-12">
					<font class="sub-profil"><i class="fa fa-envelope fa-fw"></i>	&nbsp;<%= @users.email %></font>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="col-lg-12">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">List Proyek & Topik Terkait</h3>
		  </div>
		  <div class="panel-body">
		    <% @projects.each do |project| %>
		    
			    <div class="col-md-4">
			    
			    <a href="/projects/<%= project.id %>" class="a-widget">
			        <h4><%= project.name %></h4>
			        <%= project.project_category.hashtag  %>
			        <br>
			        owner : <b><%= project.user.name %></b>
				</a>
			    </div>
		    

		    <% end %>
		  </div>
		</div>
</div>
<div class="col-lg-12">
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">Aktivitas Terkait</h3>
	  </div>
	  <div class="panel-body">
	  <div class="">

	  <section id="cd-timeline" class="cd-container">
		<% @activities.each do |activity| %>
		<div class="cd-timeline-block">
		
			<div class="cd-timeline-img cd-picture">
		
				<img src="/assets/cd-icon-location.svg" alt="Picture">
		
			</div> <!-- cd-timeline-img -->

			<div class="cd-timeline-content">
				<h2><%= activity.user.name %></h2>
				<p><%= activity.activity %> <%= activity.project.name %></p>
				<%= link_to "Read more", project_path(activity.project.id) %>
				<span class="cd-date"><%= activity.created_at %></span>
			</div> <!-- cd-timeline-content -->
		</div> <!-- cd-timeline-block -->

		<% end %>
	</section> <!-- cd-timeline -->
</div>
	  </div>
	</div>
</div>
